	<queryString>
		<![CDATA[SELECT
    Forma_Pagamento,
    sum(Dinheiro) as Total
FROM
    tbformapagamento AS Pagamento
        JOIN
    tbvenda AS Venda ON Pagamento.IdVenda = Venda.IdVenda
WHERE
	Venda.Dia BETWEEN
           STR_TO_DATE($P{DataInicial}, "%d/%m/%Y" ) AND
           STR_TO_DATE($P{DataFinal}, "%d/%m/%Y" )
AND
Unidade = $P{Unidade}
Group by Forma_Pagamento;]]>
